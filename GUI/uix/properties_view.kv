#:set light_blue (0.863, 0.949, 1.0, 1.0)
#:set blue [0.0, 0.6, 0.9, 1.0]

#==============================================================================
# Properties styling.
#==============================================================================
<PropertiesLabel@Label>
    color: light_blue
    halign: 'left'
    valign: 'middle'

<PropertyEntryDouble>
    rows: 1
    #property name
    PropertiesLabel:
        text: root.name + ':'
        font_size: 0.6 * root.height
    #value and unit.
    PropertiesLabel:
        text: ('%0.2f ' % root.value) + root.unit
        font_size: 0.6 * root.height

<PropertyEntryString>
    rows: 1

    #property name
    PropertiesLabel:
        text: root.name + ':'
        font_size: 0.6 * root.height
    #value and unit.
    PropertiesLabel:
        text: root.value
        font_size: 0.6 * root.height

<PropertyEntryStringTeam>
    rows: 1

    #property name
    PropertiesLabel:
        text: root.name + ':'
        font_size: 0.6 * root.height
    #value and unit.
    Label:
        text: root.value
        font_size: 0.6 * root.height
        halign: 'left'
        valign: 'middle'
        color: root.colour


<PropertiesHeader>
    size_hint_y: 0.84 / 13.8

    rows: 1
    padding: [5, 0]

    canvas.before:
        Color:
            rgba: [1.0, 1.0, 1.0, 0.12]
        Rectangle:
            pos: self.pos
            size: self.size


    #Icon of the property
    Image:
        source: root.source_icon
        pos: root.pos
        size_hint: (0.25, 0.25)

    #Name of the property
    Label:
        color: blue
        text: root.property_name
        font_size: 0.6 * root.height

#--------------------------------------------------
<ZeppelinProperties>
    canvas:
        Color:
            rgb: light_blue
        Rectangle:
            pos: (self.pos[0], self.top - 3)
            size: (self.width, 2)

#    canvas.after:
#        Color:
#            rgb: (0., 0., 0.)
#        Rectangle:
#            pos: self.pos
#            size: self.size

    #------------------------------------------------------------------
    # Name
    PropertyEntryStringTeam
        size_hint: (1, 1.0/7.0)
        name: 'Team'
        value: root.name
        colour: root._colour_map[root.colour]
        pos_hint: {'top': 1, 'x': 0}

    #------------------------------------------------------------------
    #Position
    PropertiesHeader:
        size_hint: (1, 1.5/7.0)
        source_icon: 'img\\prop_pos.png'
        property_name: 'Position'
        pos_hint: {'top': 1 - 1*(1.0/7.0) - 0 * (1.5/7.0), 'x': 0}

    PropertyEntryDouble:
        size_hint: (1, 1.0/7.0)
        name: 'Pos X'
        value: root.zep_pos_x
        unit: ''
        pos_hint: {'top': 1 - 1*(1.0/7.0) - 1 * (1.5/7.0), 'x': 0}

    PropertyEntryDouble:
        size_hint: (1, 1.0/7.0)
        name: 'Pos Y'
        value: root.zep_pos_y
        unit: ''
        pos_hint: {'top': 1 - 2*(1.0/7.0) - 1 * (1.5/7.0), 'x': 0}

    #------------------------------------------------------------------
    #Height
    PropertiesHeader:
        size_hint: (1, 1.5/7.0)
        source_icon: 'img\\prop_height.png'
        property_name: 'Height'
        pos_hint: {'top': 1 - 3*(1.0/7.0) - 1 * (1.5/7.0), 'x': 0}

    PropertyEntryDouble:
        size_hint: (1, 1.0/7.0)
        name: 'Current'
        value: root.zep_height
        unit: 'cm'
        pos_hint: {'top': 1 - 3*(1.0/7.0) - 2 * (1.5/7.0), 'x': 0}


