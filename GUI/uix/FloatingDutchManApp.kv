        font_size: 0.4 * self.size[1]
        pos_hint: {'top': 1.0, 'x': 0}

        text: 'Properties'

    PropertiesView:
        id: prop
        pos_hint: {'top': 0.92, 'x':0}
        size_hint: (0.18, 0.6)

        canvas:
            Color:
                rgba: light_blue

            Rectangle:
                size: (self.size[0], 2)
                pos: [self.pos[0], self.pos[1] + self.size[1] - 2]


            Rectangle:
                size: (2, 1080)
                pos: (self.pos[0] + self.width - 2, self.pos[1])

            Rectangle:
                size: (self.size[0], 2)
                pos: self.pos

            Rectangle:
                size: (2, self.size[1])
                pos: self.pos


        the_root: root

