#:kivy 1.8.0
#:import LoadButton uix.load_dialog
<ZeppelinScatter>
    img: im
    do_scale: False
    do_translation: False
    do_rotation: False
    rotation: self.direction

    size_hint: (None, None)
    size: (60, 60)

    Image:
        id: im
        source: './img/grid_zeppelin.png'
        size: root.size


<GridViewContainer>
    grid_load_button: butt

    LoadButton:
        id: butt
        pos_hint: {'top': 0.05, 'x': 0.95}
        size_hint: (0.05, 0.05)

<GridPoint>
    canvas:
        Color:
            rgb: self._get_colour()
        Rectangle:
            source: './img/gridl3_%s.png' % self.shape
            size: [self.side_size, self.side_size]
            pos: (self.pos[0] + 0.5*(self.size[0] - self.side_size), self.pos[1] + 0.5*(self.size[1] - self.side_size))
        Color:
            rgb: (0.8, 0.8 ,0.8)
        Ellipse:
            size: (self.size[0] * 0.18, self.size[0] * 0.18)
            pos: (self.pos[0] + self.size[0] / 2.0 - 0.09 * self.size[0], self.pos[1] + self.size[1] / 2.0 - 0.19 * self.size[1])

    on_touch_down: self.collide_point(*args[1].pos) and self.click()

