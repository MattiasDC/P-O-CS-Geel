<GridPoint>
    #size: self.texture_size

    #source: './img/%s.png' % self.shape
    canvas:
        Color:
            rgb: self._get_colour()
        Rectangle:
            source: './img/grid_%s.png' % self.shape
            size: self.size
            pos: self.pos
        Color:
            rgb: (0.8, 0.8 ,0.8)
        Ellipse:
            size: (self.size[0] * 0.18, self.size[1] * 0.18)
            pos: (self.pos[0] + self.size[0] / 2.0 - 0.09 * self.size[0], self.pos[1] + self.size[1] / 2.0 - 0.09 * self.size[1])


#    size_hint: None, None
#
    on_touch_down: self.collide_point(*args[1].pos) and self.click()


